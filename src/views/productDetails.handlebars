<div id="container" class="container">
    <div class="product-card">
        <img class="product-image" src="/images/test.jpg"/>
        <div class="right-panel">
            <div class="product-details">
                <h2 class="product-title">{{product.title}}</h2>
                <p>{{product.description}}</p>
                <h4>${{product.price}}</h4>
                <p id="product-id" class="hide">{{product.id}}</p>
            </div>
            <div class="controller">
                {{#if product.stock}}
                    <button id="btn-add-cart" type="button" class="btn btn-primary">
                        <span id="btn-loading" class="spinner-border spinner-border-sm hide" role="status"></span>
                        {{#if amount}}
                            Add Cart ({{amount}})
                            {{else}}
                            Add Cart
                        {{/if}}
                    </button>
                    {{else}}
                    <button type="button" class="btn btn-danger" disabled>Sold Out</button>
                {{/if}}
                <button id="btn-check-out" type="button" class="btn btn-secondary">
                    {{#if totalToPay}}
                        Check-out (${{totalToPay}})
                        {{else}}
                        Check-out
                    {{/if}}
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="loading" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-light" role="status" style="width: 4rem; height: 4rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>
