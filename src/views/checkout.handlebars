<div id="container" class="container hide">
    <h2>Check-out</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col"></th>
                <th scope="col">Price</th>
                <th scope="col">Amount</th>
                <th scope="col">Sub total</th>
